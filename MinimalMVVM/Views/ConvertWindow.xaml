<Window x:Class="MinimalMVVM.Views.ConvertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:MinimalMVVM.Views"
        xmlns:ViewModels="clr-namespace:MinimalMVVM.ViewModels"
        Title="Converter"
        MinWidth="300"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    
    <!--Set Window.DataContext to an instance of the Presenter class-->
    <Window.DataContext>
        <ViewModels:Presenter/>
    </Window.DataContext>
    
    <Views:ConverterControl/>
    
</Window>
